#!/usr/bin/env zsh
# shellcheck shell=sh
# shellcheck disable=3043,2034,3003,2296,2298,1037,3006,2154,3024,1009,1073

# Copyright (c) 2019 Sebastian Gniazdowski
# Copyright (c) 2021 Z-Shell ZI Contributors

.za-scope-dynamic() {
    builtin emulate -LR zsh
    builtin setopt extendedglob warncreateglobal typesetsilent noshortloops rcquotes

    (( $+reply && $+REPLY )) || unsetopt warncreateglobal

    autoload -Uz is-at-least
    local is_58
    is-at-least 5.8 && is_58=1

    REPLY=

    local -a quiet
    zparseopts -D -E -M ${is_58:+-F} -quiet=quiet q=quiet || return 1

    local name=$1 forks id
    local -a match mbegin mend

    (( $+functions[.zi-two-paths] )) || builtin source $ZI[BIN_DIR]/lib/zsh/side.zsh

    reply=( ${(f)"$($zi_annex_unscope[repo-dir]/ghquery "$name")"} )
    if [[ -n $reply && ${#reply} -gt 0 ]] {
	if [[ $reply[1] == (#b)([0-9]##):\ (*) ]] {
		forks=$match[1] id=$match[2]
		.zi-any-colorify-as-uspl2 "$id"
		(( ${#quiet} )) || +zi-message "{pre}unscope annex: {term}GitHub-API{msg} found" \
			"plugin ({var}forks{msg}>={data}$forks{msg},"\
"max.stars){ehi}:{rst} $REPLY{msg}.{rst}"
		REPLY=$id
		return 0
	}
    }
    REPLY=
    return 1
}
